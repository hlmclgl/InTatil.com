@using TravelBlogProject.Models.Classes
@model List<Blog>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 ><strong>Blog Listesi</strong></h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-info">Güncelle</a></td>
            <td><a href="/Blog/BlogDetay/@x.ID" class="btn btn-warning">Detaylar</a></td>
        </tr>
    }

</table>
<a href="/Admin/BlogEkle/" class="btn btn-success">Blog Ekle</a>

